<div class="comment-area mb-5">
	<form class="comment-form" name="comment_form" method="post">
		<div id="comment_form">

			<div class="form-group">
				<label for="comment_form_content">Message</label>
				<textarea id="comment_form_content" name="comment_form[content]" required="required" class="form-input"></textarea>
			</div>

			<div class="form-group">
				<button type="submit" id="comment_form_send" name="comment_form[send]" class="button button-action">Envoyer</button>
			</div>
			<input type="hidden" id="comment_form__token" name="comment_form[article]" value="{{ article.id }}">
			<input type="hidden" id="comment_form__token" name="comment_form[token]" value="{{ csrf_token('add-comment') }}">
		</div>
	</form>
</div>
